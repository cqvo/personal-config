{
  "mcpServers": {
    "github": {
      "command": "docker",
      "args": [
        "run",
        "-i",
        "--rm",
        "-e",
        "GITHUB_PERSONAL_ACCESS_TOKEN",
        "ghcr.io/github/github-mcp-server"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "INSERT YOUR PAT HERE"
      }
    },
    "mcp-svelte-docs": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-p",
        "3010:3010",
        "ghcr.io/cqvo/mcp-svelte-docs"
      ],
      "env": {
        "DEBUG": "false"
      },
      "disabled": false,
      "autoApprove": [
        "svelte_pattern",
        "svelte5_feature",
        "svelte5_common_mistakes"
      ]
    }
  }
}
